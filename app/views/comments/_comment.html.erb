<div id="<%= dom_id comment %>">
    <p>
        <strong><%= comment.user.username rescue "No username" %></strong>
        <%= comment.text %>
    </p>
    <p>
        <small>
        <%= time_ago_in_words(comment.created_at) %> ago
        </small>
    </p>
    <% if comment.user == current_user %>
        <p>
        <%= link_to 'Delete', comment_path(comment), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete } %>
        </p>
    <% end %>
</div>
